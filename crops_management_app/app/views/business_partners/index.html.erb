<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t('views.business_partners.index.title') %></h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to t('views.home.breadcrumb'), root_path %>
      </li>
      <li class="active">
        <strong><%= t('views.business_partners.index.breadcrumb') %></strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5><%= t('views.business_partners.index.sub_title') %>  <small class="text-muted">| <%= @collection.count %> <%= t('views.business_partners.index.sub_title') %></small></h5>
      <div class="ibox-tools">
        <a class="collapse-link">
          <i class="fa fa-chevron-up"></i>
        </a>
      </div>
    </div>
    <%= link_to new_business_partner_path, class: 'btn btn-primary' do %> <i class="fa fa-plus"></i> <%= t('views.business_partners.index.new_business_partner') %> <% end %>
    <div class="ibox-content">
      <% render_dynamic_index(@collection, %w( lab_code sap_code company_name commercial_contact_name commercial_contact_email phone status), %w(lab_code sap_code company_name commercial_contact_name commercial_contact_email phone), ['status'], { status: { new: 'success', active: 'info', inactive: 'default'} }) %>
    </div>
  </div>
  <br>
</div>