<table class="table table-striped table-bordered table-hover dataTables">
  <thead>
    <tr>
      <th>Title</th>
      <th>CreateAt</th>
      <th>UpdateAt</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @deleted_contract.each do |contract| %>
      <tr class="gradeX" >
        <td>
          <%= link_to contract_path(contract) do %>
            <%= contract.name&.humanize %>
          <% end %>
        </td>
        <td>
          <%= date_format(contract.created_at) %>
        </td>
        <td>
          <%= date_format(contract.updated_at) %>
        </td>
        <td>
          <%= link_to restore_contract_path(contract), data: {confirm: 'Are you sure?', toggle: :tooltip}, title: :resote do %>
            <i class="fa fa-upload "></i>
          <% end %>
          <%= link_to contract_path(contract),method: :delete, data: {confirm: 'Are you sure?', toggle: :tooltip}, title: :delete do %>
            <i class="fa fa-trash-o "></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
